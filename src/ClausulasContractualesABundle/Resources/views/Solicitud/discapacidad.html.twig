{% extends 'base.html.twig' %}

{% block content %}
    <section class="content-header">
      <h1>Hijos con discapacidad grave o severa</h1>
      <ol class="breadcrumb">
        <li><i class="fa fa-handshake-o"></i>Cláusulas Contractuales</li>
        <li>Realizar solicitud</li>
        <li class="active">Hijos con discapacidad</li>
      </ol>
    </section>
    </br>
    
    <div class="row">
        <section class="content-body col-md-offset-2 col-md-8">
          <br/>
          <form id="discapacidadForm" action="{{ path('clausulas_contractuales_guardarArchivosPrimaAjaxAction') }}" method="post" enctype="multipart/form-data">
          <input name="email" type="text" value="{{ app.user.getCorreo() }}" class="hidden"/>
            <div class="box-body">
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Seleccione un hijo para filtrar la información</label>
                    <select id="selectedHijo" name="selectedHijo" class="form-control select2" style="width: 100%;">
                      <option selected="selected" value="" disabled>Seleccione</option>
                      {% for hijo in hijos %}
                        <option value="{{ hijo.getPrimerNombre() }}_{{ hijo.getPrimerApellido() }}_{{ hijo.getId() }}">{{ hijo.getPrimerNombre() }} {{ hijo.getPrimerApellido() }}</option>
                      {% endfor %}
                    </select>
                  </div>
                </div>
              </div>
            </div>
            
            <div id="recaudos" class="col-md-12 hidden">
              <div class="box box-info collapsed-box">
                <div class="box-header with-border">
                  <h3><i class="fa fa fa-list-alt"></i> Recaudos</h3>
                  </br>
                  <p>A continuación adjunte los recaudos especificados.</p>
                  </br>
                  
                  <div class="row">    
                    <div class="col-md-12">
                      <div id="duracion" class="form-group has-feedback">
                        <label class="control-label">Tipo de período académico</label>
                        <select id="selectedDuracion" name="selectedDuracion" class="form-control select2" style="width: 100%;">
                          <option selected="selected" value="" disabled>Seleccione</option>
                          {% for tipo in tipos %}
                            <option value="{{ tipo.getValor() }}">{{ tipo.getDescripcion() }}</option>
                          {% endfor %}
                        </select>
                      </div>
                    </div>
                  </div>
                  <div id="duracionInput" class="row hidden">    
                    <div class="col-md-12">
                      <div class="form-group has-feedback">
                        <label class="control-label">Tiempo de duración de período académico</label>
                        </br>
                        <input id="valorOtro" name="valorOtro" type="number" min="1" max="24"/>
                      </div>
                    </div>
                  </div>

                  <div class="row">    
                    <div class="col-md-12">
                      <div id="cartaSolteria" class="form-group has-feedback">
                        <label class="control-label">Carta de soltería</label>
                        <input id="cargarCartaSolteria" name="input[]" accept="application/pdf"  type="file" class="file" data-show-upload="false" data-show-caption="true">
                        <span id="spanCartaSolteria" class="glyphicon form-control-feedback"></span>
                      </div>
                    </div>
                  </div>
                  
                  <div class="row">    
                    <div class="col-md-12">
                      <div id="cartaExpensas" class="form-group has-feedback">
                        <label class="control-label">Carta de expensas</label>
                        <input id="cargarCartaExpensas" name="input2[]" accept="application/pdf"  type="file" class="file" data-show-upload="false" data-show-caption="true">
                        <span id="spanCartaExpensas" class="glyphicon form-control-feedback"></span>
                      </div>
                    </div>
                  </div>

                  <div class="row">    
                    <div class="col-md-12">
                      <div id="cedulaIdentidad" class="form-group has-feedback">
                        <label class="control-label">Cédula de identidad</label>
                        <input id="cargarCedulaIdentidad" name="input3[]" accept="application/pdf"  type="file" class="file" data-show-upload="false" data-show-caption="true">
                        <span id="spanCedulaIdentidad" class="glyphicon form-control-feedback"></span>
                      </div>
                    </div>
                  </div>

                  <div class="row">    
                    <div class="col-md-12">
                      <div id="certificadoConapdis" class="form-group has-feedback">
                        <label class="control-label">Certificado de personas con discapacidad CONAPDIS</label>
                        <input id="cargarCertificadoConapdis" name="input4[]" accept="application/pdf"  type="file" class="file" data-show-upload="false" data-show-caption="true">
                        <span id="spanCertificadoConapdis" class="glyphicon form-control-feedback"></span>
                      </div>
                    </div>
                  </div>

                  <div class="row">    
                    <div class="col-md-12">
                      <div id="calificacionConapdis" class="form-group has-feedback">
                        <label class="control-label">Calificación de personas con discapacidad CONAPDIS</label>
                        <input id="cargarCalificacionConapdis" name="input5[]" accept="application/pdf"  type="file" class="file" data-show-upload="false" data-show-caption="true">
                        <span id="spanCalificacionConapdis" class="glyphicon form-control-feedback"></span>
                      </div>
                    </div>
                  </div>

                  <div class="row">
                      <div class="col-xs-offset-4 col-xs-4">
                        <button id="guardarDiscapacidad" type="button" class="btn btn-primary btn-block btn-flat">Aceptar</button>
                      </div>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </section>
    </div>
{% endblock %}

{% block custom_javascripts %}
  <script src="{{ asset('assets/js/ClausulasContractuales/Solicitud/loadSolicitud.js') }}"></script>
  <script src="{{ asset('assets/js/ClausulasContractuales/Solicitud/visible.js') }}"></script>
  <script src="{{ asset('assets/js/ClausulasContractuales/Solicitud/guardarDatos.js') }}"></script>
{% endblock %}
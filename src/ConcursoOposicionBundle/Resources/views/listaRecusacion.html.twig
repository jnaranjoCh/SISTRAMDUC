{% extends 'base.html.twig' %}

{% block content %}
    <section class="content-header">
      <h1>
        Listado de Recusaci&oacute;n del Concursos de Oposici&oacute;n
      </h1> 
      <ol class="breadcrumb">
        <li><i class="fa fa fa-users"></i> Oposici&oacute;n</li>
        <li class="active"> Listado de Recusaci&oacute;n</li>
      </ol>
    </section>

    <br/>
    <div class="row">
      <!--Success message-->
      <section class="content-body col-md-offset-1 col-md-10">
        
        <div class="modal fade" id="myModal" role="dialog">
          <div class="modal-dialog">
          
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="elim" class="modal-title hide">Eliminar Concurso</h4>
                <h4 id="modif" class="modal-title hide">Modificar Concurso</h4>
              </div>
              <div class="modal-body">              

                <div class="container">
                  <label><center>Aspirante</center></label>
                  <div class="row">
                      <div class='col-sm-6'>
                          <div class="form-group">
                              <div class='input-group' >

                                  <input class="form-control" id='aspiren' value="" type='text' maxlength="50"/>

                                  <span class="input-group-addon">
                                      <span class="fa fa-font"></span>
                                  </span>
                              </div>
                          </div>
                      </div>
                  </div>
                </div>

                 <div class="container">
                  <label><center>Jurado</center></label>
                  <div class="row">
                      <div class='col-sm-6'>
                          <div class="form-group">
                              <div class='input-group' >

                                  <input class="form-control" id='jurar' value="" type='text' maxlength="50"/>

                                  <span class="input-group-addon">
                                      <span class="fa fa-font"></span>
                                  </span>
                              </div>
                          </div>
                      </div>
                  </div>
                </div>

                 <div class="container">
                  <label><center>Fecha De Registro</center></label>
                  <div class="row">
                      <div class='col-sm-6'>
                          <div class="form-group">
                              <div class='input-group' >

                                  <input class="form-control" id='fecha' value="" type="text" placeholder="dd/MM/yyyy" maxlength="10"/>

                                  <span class="input-group-addon">
                                      <span class="glyphicon glyphicon-calendar"></span>
                                  </span>

                              </div>
                          </div>
                      </div>
                  </div>
                </div>

                <div class="container">
                  <label><center>Responsable</center></label>
                  <div class="row">
                      <div class='col-sm-6'>
                          <div class="form-group">
                              <div class='input-group' >
                                  <input class="form-control" id='usuario' value=""  maxlength="99" placeholder="Ejemplo: "/>
                                  <span class="input-group-addon">
                                      <span class="glyphicon glyphicon-font"></span>
                                  </span>
                              </div>
                          </div>
                      </div>
                  </div>
                </div>            

              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cancelar</button>
                <button id="eliminarRecusacion" type="button" class="btn btn-success">Eliminar</button>
                <button id="modificarRecusacion" type="button" class="btn btn-success">Modificar</button>
              </div>
            </div>
            
          </div>
        </div>

        <br/>

        <div class="register-box-body">

                <div class="box">
                  <div class="box-header">
                    <h3 class="box-title">Recusaciones</h3>
                  </div>

                   <div class="box-body">

                      <table id="tabla" class="table table-bordered table-striped">
                          <thead>
                          <tr>
                            <th>Aspirante</th>
                            <th>Jurado</th>
                            <th>Fecha</th>
                            <th>Responsable</th>                         
                          </tr>
                          </thead>
                          <tbody id="cuerpo">

                          </tbody>
                          <tfoot>
                             <tr>
                              <th>Aspirante</th>
                              <th>Jurado</th>
                              <th>Fecha</th>
                              <th>Responsable</th>                         
                            </tr>
                          </tfoot>
                      </table>
                   </div>

                </div>
      </section>
    </div>
    <br/><br/>
    
{% endblock %}


{% block custom_javascripts %}

  <script src="{{ asset('assets/js/concursoOposicion/listarRecusacion.js') }}"></script>

  <script src="{{ asset('assets/vendor/AdminLTE/plugins/datatables/jquery.dataTables.min.js') }}"></script>

  <script src="{{ asset('assets/vendor/AdminLTE/plugins/datatables/dataTables.bootstrap.min.js') }}"></script>

  <script src="{{ asset('assets/vendor/AdminLTE/plugins/datatables/dataTables.bootstrap.js') }}"></script>

  <script src="{{ asset('assets/vendor/AdminLTE/plugins/datatables/jquery.dataTables.js') }}"></script>

  <script>
    
      tabla = $('#tabla').DataTable({
        "language": {
                "url": "{{ asset('assets/js/datatable-spanish.json') }}"
          },
          columns: [
              { "data": "aspirante" },
              { "data": "jurado" },
              { "data": "fecha" },
              { "data": "usuario" },
              { "data": "elim" }
          ]
      });

  </script>

{% endblock %}
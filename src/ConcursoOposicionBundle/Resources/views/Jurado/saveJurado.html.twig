<script type="text/javascript">

	var option;

	var personal = true;
	var jurado2 = true;
	var jurado3 = true;

	$( window ).load(function (){

		$("#personal").click();
		$("#jurado2").click();
		$("#jurado3").click();

		$.ajax({
	        method: "POST",
	        url:  "{{ path('listadoConcursosAjax') }}",
	        dataType: 'json',
	        success: function(data)
	        {
	        	if (data == "N"){
	        		
	        		toastr.error("No Hay Concursos Registrados", "Error", {
			            "timeOut": "0",
			            "extendedTImeout": "0"
			         });
	        		
	        	} else {
	        
		        	opcion = "<option id='sel' selected='selected'>...</option>";
		 
		        	for (var i = 0; i < data["id"].length; i++) {
		        		
		        		var num = data["id"][i];
	
		        		opcion = opcion+"<option value="+num+"><b>Area:</b> "+data["area"][i]+
		        		"   -   <b>Vacantes:</b> "+data["vacantes"][i]
		        		+"   -   <b>Fecha Inicio:</b> "+data["inicio"][i]
		        		+"</option>";   		
		        	}
	
		        	$("#lista").html(opcion);
	        	}
	        }
	    });	
	});

	$('#registrarJurado').click(function (){ 

		toastr.clear();
		var text = "";
		
		var inputs = ["cedula", "nombre", "apellido", "facultad", "universidad", "area"];
		var continua;
				
		$.ajax({

	        method:"POST",
	        url: "{{ path('listadoJuradosAjax') }}",
	        dataType: 'json',
	        data: {"id": $("#lista").val()},
	        success: function(data)
	        {
	        	if (data == "N" || data == 'N'){
	        	
	        		continua = true;
	        		
	        		if ($("#lista").val() == null || 
					$("#lista").val() == "..." || 
					$("#lista").val() == "") {
		
					continua = false;
					text = "Concurso vacío";
					$("#lista1").addClass("has-error");
					$("#lista11").removeClass("hide");
					
					} else {
					
						$("#lista1").removeClass("has-error");
						$("#lista11").addClass("hide");
					}
			
					for (var i = 1; i < 4; i++) {
						
						for (var j = 0; j < inputs.length; j++) {
							
							if ($("#"+inputs[j]+i).val() == ""){
			
								$("#span"+inputs[j]+i).removeClass("hide");
								$("#"+inputs[j]+i+i).addClass("has-error");
								continua = false;
								text = "Campo vacío";
							} 
							else {
								$("#span"+inputs[j]+i).addClass("hide");
								$("#"+inputs[j]+i+i).removeClass("has-error");					
							}				
						}
					}
					
					if (isNaN($("#cedula1").val())){
						text = "No Es Un Número";
						$("#spancedula1").removeClass("hide");
						$("#cedula11").addClass("has-error");
						continua = false;
					}
					
					if (isNaN($("#cedula2").val())){
						text = "No Es Un Número";
						$("#spancedula2").removeClass("hide");
						$("#cedula22").addClass("has-error");
						continua = false;
					}
					
					if (isNaN($("#cedula3").val())){
						text = "No Es Un Número";
						$("#spancedula3").removeClass("hide");
						$("#cedula33").addClass("has-error");
						continua = false;
					}
			
					if (continua){
			
						if ($("#cedula1").val() != $("#cedula2").val() &&
							$("#cedula1").val() != $("#cedula3").val() &&
							$("#cedula2").val() != $("#cedula3").val()){
			
							/*json*/
			
							for (var i = 1; i <= 3; i++) {
				
								$.ajax({
						            method: "POST",
						            data: {"cedula":$("#cedula"+i).val(), 
						            "nombre":$("#nombre"+i).val(),
						            "tipo":"Oposicion", 
						            "apellido":$("#apellido"+i).val(), 
						            "facultad":$("#facultad"+i).val(), 
						            "universidad":$("#universidad"+i).val(), 
						            "area":$("#area"+i).val(),
						        	"concurso": $("#lista").val()},
						            url:  "{{ path('registroJuradosAjax') }}",
						            dataType: 'json',
						            success: function(data)
						            {
						                if (data == "S"){
			
											document.getElementById('juradosSave').reset();				
			
											toastr.clear();
			
											text = "Jurados Insertados";
			
											toastr.success(text, "Exito", {
							                    "timeOut": "0",
							                    "extendedTImeout": "0"
							                 });
						                } 
						                else{
			
						                	toastr.clear();
			
						                	if (data == "N")		                		
						                		text = "Usted no tiene permiso";		                	
						                	else
							                	text = "Error al Registrar Jurados";			                		                	
						                	
						                	toastr.error(text, "Error", {
									            "timeOut": "0",
									            "extendedTImeout": "0"
								         	});
						                }
			
						                for (var k = 1; k <= 3; k++) {
								
											$('#spancedula'+k).addClass("hide");
											$('#spannombre'+k).addClass("hide");
											$('#spanapellido'+k).addClass("hide");
											$('#spanfacultad'+k).addClass("hide");
											$('#spanuniversidad'+k).addClass("hide");
											$('#spanarea'+k).addClass("hide");
										}
						            }
						        });					        
							}		
			
							/*fin del json*/
						}
						else {
							toastr.error("Hay Cédulas Repetidas", "Error", {
					            "timeOut": "0",
					            "extendedTImeout": "0"
				         	});
						}		
					}
					else {
			
						toastr.error(text, "Error", {
				            "timeOut": "0",
				            "extendedTImeout": "0"
				         });
					}	
	        		        		        	
	        	} else {
	        		        	
	        		toastr.clear();

					text = "Este Concurso Ya Tiene "+(data["nombre"].length)+" Jurados";

					toastr.error(text, "Error", {
	                    "timeOut": "0",
	                    "extendedTImeout": "0"
	                 });	        	
	        	}                                   
	        }
	    });	
	});

	$("#personal").click(function(){
	    if(!personal){
	        if(jurado2)
	            $("#jurado2").click();
	        if(jurado3)
	            $("#jurado3").click();
	        personal = true;
	    }else
	        personal = false;
	});

	$("#jurado2").click(function(){
	    if(!jurado2){
	        if(personal)
	            $("#personal").click();
	        if(jurado3)
	            $("#jurado3").click();
	        jurado2 = true;
	    }else
	        jurado2 = false;
	});

	$("#jurado3").click(function(){
	    if(!jurado3){
	        if(jurado2)
	            $("#jurado2").click();
	        if(personal)
	            $("#personal").click();
	        jurado3 = true;
	    }else
	        jurado3 = false;
	});

</script>
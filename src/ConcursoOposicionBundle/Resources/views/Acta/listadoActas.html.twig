	$('#guardarAutorizador').click(function (){

		toastr.clear();

		$.ajax({
			method:"POST",
			url: "{{ path('guardarAutorizadorAjax') }}",
			dataType: 'json',
			data : {"id" : ident, "cargo" : $('#cargoq').val()},
	        success: function(data)
	        {
           		if (data == "N") {

           			toastr.error("Usted No Tiene Este Rol", "Error", {

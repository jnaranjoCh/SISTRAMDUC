{% extends 'base.html.twig' %}

{% block content %}
    <section class="content-header">
      <h1>
        Listado de Suplentes CPEC del Concursos de Oposici&oacute;n
      </h1> 
      <ol class="breadcrumb">
        <li><i class="fa fa fa-users"></i> Oposici&oacute;n</li>
        <li class="active"> Listado de Suplentes</li>
      </ol>
    </section>

    <br/>
    <div class="row">
      <!--Success message-->
      <section class="content-body col-md-offset-1 col-md-10">
        <br/>
        <div class="register-box-body">

          <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
            
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 id="elim" class="modal-title hide">Eliminar Concurso</h4>
                  <h4 id="modif" class="modal-title hide">Modificar Concurso</h4>
                </div>
                <div class="modal-body">

                  <div class="container">
                    <label><center>Nombre</center></label>
                    <div class="row">
                        <div class='col-sm-6'>
                            <div class="form-group">
                                <div class='input-group' >

                                    <input class="form-control" id='nombre' value="" type="text" placeholder="Nombre" maxlength="30"/>

                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-font"></span>
                                    </span>

                                </div>
                            </div>
                        </div>
                    </div>
                  </div>

                  <div class="container">
                    <label><center>Apellidos</center></label>
                    <div class="row">
                        <div class='col-sm-6'>
                            <div class="form-group">
                                <div class='input-group' >

                                    <input class="form-control" id='apellido' value="" type='text' maxlength="30" placeholder="Apellidos" />

                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-font"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                  </div>

                  <div class="container">
                    <label><center>C&eacute;dula</center></label>
                    <div class="row">
                        <div class='col-sm-6'>
                            <div class="form-group">
                                <div class='input-group' >
                                    <input class="form-control" id='cedula' value=""  maxlength="10" placeholder="Cedula" onkeypress="return justNumbers(event);" type="text"/>
                                    <span class="input-group-addon">
                                        <span class="fa fa-address-card-o"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                  </div>

                  <div class="container">
                    <label><center>Area De Investigaci&oacute;n</center></label>
                    <div class="row">
                        <div class='col-sm-6'>
                            <div class="form-group">
                                <div class='input-group' >

                                    <input class="form-control" id='areainvestigacion' value="" type='text' maxlength="30" placeholder="Area" />

                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-font"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                  </div>

                  <div class="container">
                    <label><center>Facultad</center></label>
                    <div class="row">
                        <div class='col-sm-6'>
                            <div class="form-group">
                                <div class='input-group' >

                                    <input class="form-control" id='facultad' value="" type='text' maxlength="30" placeholder="Facultad" />

                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-font"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                  </div>

                  <div class="container">
                    <label><center>Universidad</center></label>
                    <div class="row">
                        <div class='col-sm-6'>
                            <div class="form-group">
                                <div class='input-group' >

                                    <input class="form-control" id='universidad' value="" type='text' maxlength="30" placeholder="Universidad" />

                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-font"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                  </div>

                   <div class="container">
                  <label><center>Responsable De Registro o Modificaci&oacute;n</center></label>
                  <div class="row">
                      <div class='col-sm-6'>
                          <div class="form-group">
                              <div class='input-group' >
                                  <input class="form-control" id='idusuarioasigna' value=""/>
                                  <span class="input-group-addon">
                                      <span class="glyphicon glyphicon-font"></span>
                                  </span>
                              </div>
                          </div>
                      </div>
                  </div>
                </div>                   

                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-primary" data-dismiss="modal">Cancelar</button>
                  <button id="eliminarConcurso" type="button" class="btn btn-success">Eliminar</button>
                  <button id="modificarConcurso" type="button" class="btn btn-success">Modificar</button>
                </div>
              </div>    
            </div>
          </div>

            <form>

                <div class="box">
                  <div class="box-header">
                    <h3 class="box-title">Suplentes Cpec de Oposici&oacute;n</h3>
                  </div>

                   <div class="box-body">

                      <table id="tabla" class="table table-bordered table-striped">
                          <thead>
                          <tr>
                            <th>Nombre(s)</th>
                            <th>Apellido(s)</th>
                            <th>Area Postulaci&oacute;n</th>
                            <th>Facultad</th>
                            <th>Universidad</th>                          
                          </tr>
                          </thead>
                          <tbody id="cuerpo">

                          </tbody>
                          <tfoot>
                             <tr>
                              <th>Nombre(s)</th>
                              <th>Apellido(s)</th>
                              <th>Area Postulaci&oacute;n</th>
                              <th>Facultad</th>
                              <th>Universidad</th>                           
                            </tr>
                          </tfoot>
                      </table>
                   </div>

                </div>

            </form>
        </div>
      </section>
    </div>
    <br/><br/>
    
{% endblock %}

{% block custom_javascripts %}

    <script src="{{ asset('assets/js/concursoOposicion/listarSuplenteCpec.js') }}"></script>

  <script src="{{ asset('assets/vendor/AdminLTE/plugins/datatables/jquery.dataTables.min.js') }}"></script>

  <script src="{{ asset('assets/vendor/AdminLTE/plugins/datatables/dataTables.bootstrap.min.js') }}"></script>

  <script src="{{ asset('assets/vendor/AdminLTE/plugins/datatables/dataTables.bootstrap.js') }}"></script>

  <script src="{{ asset('assets/vendor/AdminLTE/plugins/datatables/jquery.dataTables.js') }}"></script>

  <script>
    
      tabla = $('#tabla').DataTable({
        "language": {
                "url": "{{ asset('assets/js/datatable-spanish.json') }}"
          },
          columns: [
              { "data": "nombre" },
              { "data": "apellido" },
              { "data": "areainvestigacion" },
              { "data": "facultad" },
              { "data": "universidad" },
              { "data": "modif" }
              //,{ "data": "elim" }
          ]
      });

  </script>

  {% include('ConcursoOposicionBundle:Cpec:listadoSuplente.html.twig') %}

{% endblock %}